<div class="container mt-4">
    <div align="center" class="form-group">
        <h2>Atualizar</h2>
    </div>
    {{#each usuario}}

    
    <form method="POST" action="/direcao/alterar">
        <input type="hidden" name="id" value="{{id}}">
        <div class="form-group">
            <label for="inputAddress">Nome</label>
            <input type="text" class="form-control" name="nome" placeholder="João da Neves" value="{{nome}}">
        </div>
        <div class="form-group">
            <label for="inputAddress2">CPF</label>
            <input type="text" class="form-control" name="cpf" placeholder="054.667.933-10" value="{{cpf}}">
        </div>
        <div class="form-group">
            <label for="inputAddress2">Nascimento</label>
            <input type="date" class="form-control" name="nascimento" placeholder="30/03/1997" value="{{nascimento}}">
        </div>
        <div class="form-group">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
        </div>
        <div class="form-group">
            <label for="inputPassword4">Senha Antiga</label>
            <input type="password" class="form-control" name="senhaAntiga" placeholder="Senha">
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputPassword4">Nova Senha</label>
                <input type="password" class="form-control" name="senhaNova" placeholder="Senha">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Confirma Senha</label>
                <input type="password" class="form-control" name="senha" placeholder="Senha">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Alterar</button>
    </form>
    {{else}}
    Não encontrado
    {{/each}}
</div>