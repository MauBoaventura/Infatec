<div class="container mt-4">
    <div align="center" class="form-group">
        <h2>Atualizar</h2>
    </div>
    {{#each turma}}

    <form method="POST" action="/direcao/alterar/turma">
        <input type="hidden" name="id" value="{{id}}">
        <div class="form-group">
            <label for="inputAddress">Nome</label>
            <input type="text" class="form-control" name="nome" placeholder="João da Neves" value="{{nome}}">
        </div>
        <div class="form-group">
            <label for="inputAddress">Ano</label>
            <input type="text" class="form-control" name="ano" placeholder="1º Ano" value="{{ano}}">
        </div>
        <div class="form-group">
            <label for="inputAddress2">Criacao</label>
            <input type="date" class="form-control" name="criacao" placeholder="30/03/1997" value="{{criacao}}">
        </div>
        <button type="submit" class="btn btn-primary">Alterar</button>
    </form>
</div> {{else}}
Não encontrado
{{/each}}
</div>